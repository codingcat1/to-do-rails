<h1>Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li><%= task.description %></li>
    <form action="/tasks/<%= task.id %>" method="post">
      <input name="_method" type="hidden" value="patch">
      <input name="task[done]" type="hidden" value="true">
      <button>Mark done</button>
    </form>
  <% end %>


</ul>



